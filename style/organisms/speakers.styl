.speaker{
	text-transform: uppercase;
	max-width: 360px;
	cursor: pointer;
	margin: 20px auto;
	display: block;
	&:hover{
		.speaker-content{
			-webkit-transform: translateY(0);
			-moz-transform: translateY(0);
			-ms-transform: translateY(0);
			-o-transform: translateY(0);
			transform: translateY(0);
		}
	}
	&-img{
		width: 100%;
		height: 360px;
		display: block;
		background-position: center center;
		background-repeat: no-repeat;
		background-size: cover;
		background-color: #000;
		position: relative;
		border: 6px solid $gray;
		overflow: hidden;
		-webkit-border-radius: 12px;
		-moz-border-radius: 12px;
		border-radius: 12px;
		&:after{
			content: "";
			position: absolute;
			bottom: 0;
			left: 0;
			right: 0;
			width: 100%;
			height: 50%;
			z-index: 1;
			background-image:linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0) 10%, rgba(0, 0, 0, 0.43) 90%, rgba(0, 0, 0, 0.6) 100%);
		}
	}
	.soon{
		.speaker-content{
			-webkit-transform: translateY(0);
			-moz-transform: translateY(0);
			-ms-transform: translateY(0);
			-o-transform: translateY(0);
			transform: translateY(0);
			h2{
				margin: 0;
			}
		}
		&:before{
			content: "?";
			width: 100%;
			height: 100%;
			font-size: 80px;
			line-height: 360px;
			color: #fff;
			text-align: center;		
			position: absolute;
			left: 0;
			right: 0;
			bottom: 0;
			top: 0;
		}
	}
	&-content{
		z-index: 2;
		position: absolute;
		left: 10px;
		bottom: 10px;
		display: inline-block;
		vertical-align: middle;
		-webkit-transform: translateY(42px);
		-moz-transform: translateY(42px);
		-ms-transform: translateY(42px);
		-o-transform: translateY(42px);
		transform: translateY(42px);
		-webkit-transition: -webkit-transform 0.3s ease-in-out;
		-moz-transition: -moz-transform 0.3s ease-in-out;
		transition: transform 0.3s ease-in-out;
	}
	&-text{
		color: #fff;
		height: 30px;
		margin: 0;
		line-height: normal;
		font-size: 14px;
	}
	&-title{
		padding: 0 6px;
		line-height: normal;
		background-color: #fff;
		color: #000;
		display: inline-block;
		margin-top: 0;
		font-size: 24px;
		&:after{
			content: "";
		}
	}

}